{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "types": ["node"],
      "outDir": "dist",
      "baseUrl": "./",
      "paths": {
        "*": ["*", "src/*"]
      }
    },
    "include": [
      "src",
      "src/**/*.ts",
    ],
    "exclude": ["node_modules"]
}
  